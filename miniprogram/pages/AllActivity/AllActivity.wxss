/* pages/AllActivity/AllActivity.wxss */
.nav {
  display: flex;
  justify-content: space-between;
  padding: 10px;
}

.nav-item {
  font-size: 16px;
  color: #666;
  cursor: pointer;
}

.nav-item.active {
  color: #333;
  border-bottom: 2px solid #333;
}

.activity {
  display: flex;
  align-items: center;
  padding: 2px;
  border: #ccc 1px solid;
}

.image {
  width: 210rpx;
  height: 140rpx;
  margin-right: 20rpx;
}

.text-container {
  flex: 1;
}

.text-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #000000;
  margin-bottom: 10rpx;
}

.text-other {
  font-size: 35rpx;
  color: #666666;
  margin-bottom: 10rpx;
}

.activity button {
  background-color: rgb(98, 141, 98);
  color: white;
  font-size: 8px;
  padding: 8px 12px;
  border-radius: 4px;
}